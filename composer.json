{
    "name": "searchcraft/searchcraft-php",
    "description": "Searchcraft API PHP Client",
    "keywords": [
        "searchcraft",
        "search",
        "api"
    ],
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Searchcraft Team",
            "email": "support@searchcraft.io",
            "homepage": "https://searchcraft.io",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/searchcraft-inc/searchcraft-issues",
        "source": "https://github.com/searchcraft-inc/searchcraft-client-php",
        "docs": "https://docs.searchcraft.io"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "php-http/discovery": "^1.7",
        "psr/http-client": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Searchcraft\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Searchcraft\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "guzzlehttp/guzzle": "Use Guzzle ^7 as HTTP client",
        "http-interop/http-factory-guzzle": "Factory for guzzlehttp/guzzle"
    },
    "require-dev": {
        "php-cs-fixer/shim": "^3.59.3",
        "guzzlehttp/guzzle": "^7.8.1",
        "http-interop/http-factory-guzzle": "^1.2.0",
        "pestphp/pest": "^3.0",
        "mockery/mockery": "^1.6"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "pestphp/pest-plugin": true
        }
    }
}
